generator client {
  provider = "prisma-client-js"
}

generator zod {
  provider                  = "zod-prisma-types"
  output                    = "../src/common/validation/generated"
  createRelationValuesTypes = true
  prismaJsonNullability     = true
  createInputTypes          = false
  addInputTypeValidation    = true
  useMultipleFiles          = false
  writeBarrelFiles          = false
  coerceDate                = false
  writeNullishInModelTypes  = true
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// ================================
// AUTHENTICATION & USER MANAGEMENT
// ================================

enum UserStatus {
  ACTIVE
  INACTIVE
  SUSPENDED
  PENDING_VERIFICATION
}

model User {
  id            String    @id @default(cuid())
  sub           String    @unique // Unique identifier from the authentication provider
  email         String    @unique
  name          String?
  avatar        String?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  emailVerified DateTime?
  password      String?

  status        UserStatus   @default(INACTIVE)
  lastLoginAt   DateTime?
  loginAttempts Int          @default(0)
  lockedUntil   DateTime?
  project       Project[]
  resource      Resource[]
  app           App[]
  database      Database[]
  Deployment    Deployment[]

  @@map("users")
}

model Project {
  id          String   @id @default(cuid())
  uuid        String
  name        String
  slug        String
  description String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Team relationship (multitenancy)
  userSub   String
  user      User       @relation(fields: [userSub], references: [sub])
  resources Resource[]

  @@unique([userSub, uuid])
  @@map("projects")
}

enum ResourceType {
  APP
  DATABASE
}

model Resource {
  id        String  @id @default(uuid())
  projectId String
  project   Project @relation(fields: [projectId], references: [id])
  envId     String

  type            ResourceType
  resource_status ResourceStatus @default(stopped)
  app             App?
  database        Database?
  userSub         String
  user            User           @relation(fields: [userSub], references: [sub])

  @@map("resources")
}

enum BuildPack {
  nixpacks
  static
}

enum ResourceStatus {
  running
  stopped
  error
  deploying
}

model App {
  id          String  @id @default(uuid())
  uuid        String
  name        String
  description String?

  git_repository String
  github_branch  String       @default("main")
  build_pack     BuildPack
  resource       Resource     @relation(fields: [resouceId], references: [id])
  resouceId      String       @unique
  createdAt      DateTime     @default(now())
  updatedAt      DateTime     @updatedAt
  userSub        String
  user           User         @relation(fields: [userSub], references: [sub])
  deployment     Deployment[]

  @@map("apps")
}

enum DatabaseType {
  postgres
  mysql
  mongodb
}

model Database {
  id   String @id @default(uuid())
  uuid String

  name        String
  description String?
  resource    Resource @relation(fields: [resouceId], references: [id])
  resouceId   String   @unique
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  userSub     String
  user        User     @relation(fields: [userSub], references: [sub])

  databaseType     DatabaseType
  databaseName     String
  databaseUserName String
  databasePassword String

  @@map("databases")
}

model Deployment {
  id        String   @id @default(cuid())
  uuid      String
  appId     String
  app       App      @relation(fields: [appId], references: [id])
  message   String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  userSub   String
  user      User     @relation(fields: [userSub], references: [sub])

  @@map("deployments")
}
