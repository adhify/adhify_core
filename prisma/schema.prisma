generator client {
  provider = "prisma-client-js"
}

generator zod {
  provider                  = "zod-prisma-types"
  output                    = "../src/common/validation/generated"
  createRelationValuesTypes = true
  prismaJsonNullability     = true
  createInputTypes          = false
  addInputTypeValidation    = true
  useMultipleFiles          = false
  writeBarrelFiles          = false
  coerceDate                = false
  writeNullishInModelTypes  = true
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// ================================
// AUTHENTICATION & USER MANAGEMENT
// ================================

enum UserStatus {
  ACTIVE
  INACTIVE
  SUSPENDED
  PENDING_VERIFICATION
}

model User {
  id            String    @id @default(cuid())
  sub           String    @unique // Unique identifier from the authentication provider
  email         String    @unique
  name          String?
  avatar        String?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  emailVerified DateTime?
  password      String?

  status        UserStatus @default(INACTIVE)
  lastLoginAt   DateTime?
  loginAttempts Int        @default(0)
  lockedUntil   DateTime?
  project       Project[]

  @@map("users")
}

model Project {
  id          String   @id @default(cuid())
  uuid        String
  name        String
  slug        String
  description String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Team relationship (multitenancy)
  userSub  String
  user     User       @relation(fields: [userSub], references: [sub])
  apps     App[]
  Database Database[]

  @@unique([userSub, uuid])
  @@map("projects")
}

model App {
  id        String  @id @default(uuid())
  uuid      String
  projectId String
  project   Project @relation(fields: [projectId], references: [id])
  envId     String

  name        String
  description String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("apps")
}

model Database {
  id        String  @id @default(uuid())
  uuid      String
  projectId String
  project   Project @relation(fields: [projectId], references: [id])
  envId     String

  name        String
  description String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("databases")
}
